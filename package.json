{
  "name": "ez-job",
  "version": "1.0.25",
  "description": "Application de quiz interactive",
  "scripts": {
    "build": "python3 api.py generate-index && echo 'Build completed'",
    "dev": "python3 api.py generate-index && python3 -m http.server 8000",
    "generate-index": "python3 api.py generate-index",
    "bump-version": "npm version patch --no-git-tag-version && node -e \"const fs=require('fs');const v=require('./package.json').version;fs.writeFileSync('.version',v);\"",
    "update-version": "node scripts/update-version.js",
    "validate": "node scripts/validate-quiz.js",
    "validate-all": "node scripts/validate-quiz.js"
  },
  "keywords": [
    "quiz",
    "education",
    "javascript"
  ],
